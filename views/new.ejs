<% include partials/header %>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 style="text-align:center;">Create a New Campground</h1>
                <div style="width: 30%; margin:5% auto;">
                    <form>
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" name="name" class="form-control" id="name" aria-describedby="name" placeholder="Enter campground name">
                        </div>
                        <div class="form-group">
                            <label for="image">Image:</label>
                            <input type="text" name="image" class="form-control" id="image" placeholder="Image url">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>
        </div>
    </div>
    <!-- end of container -->
    <% include partials/footer %>