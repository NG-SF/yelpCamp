<% include ../partials/header %>
  <div class="container">
      <div class="row">
          <div class="col">
            <h1 style="text-align:center;">Add new comment to <%= Campground.name %></h1>
              <div style="width: 30%; margin:5% auto;">
                <form action="/campgrounds/<%= Campground._id %>/comments" method="POST">
                    <div class="form-group">
                     <label for="name">Author:</label>
                     <input type="text" name="comment[author]" class="form-control" id="name" placeholder="Your name">
                    </div>
                   <div class="form-group">    
                     <label for="comment">Comment:</label>
                     <input type="text" name="comment[text]" class="form-control" id="comment" placeholder="Your comment here">
                    </div>
                      <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
                    <a href="/campgrounds" class="btn pt-3">Go Back</a>
              </div>
            </div>
        </div>
    </div> <!-- end of container -->

    <% include ../partials/footer %>