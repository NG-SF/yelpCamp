<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group">
                <li class="list-group-item active">Info</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">info3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= Campground.image %>" alt="image of a campground">
                <div class="card">               
                <div class="caption card-body">
                    <h4 class="float-right"> $10/night </h4>
                    <h3><a href=""><%= Campground.name %></a> </h3>
                    <p><%= Campground.description %></p>
            </div>
            </div>
            <div class="card-body bg-light">
                <div class="text-right">
                  <a class="btn btn-success" role="button" href="/campgrounds/<%= Campground._id %>/comments/new">Add a review</a>
                </div>
                <hr>
                <% Campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>  <span class="float-right">10 days ago</span> 
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <% }); %>
                </div>
            </div>
        </div><!-- end of col-9 -->
        </div>
    </div>

<% include ../partials/footer %>